{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",                        // 生成调试信息
                "-std=c++23",                // 对应你的 settings 配置
                "${file}",                   // 当前打开的文件 (autodiff_demo.cpp)
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}", // 输出文件名
                // --- head files ---
                "-I/usr/include/eigen3",

                // dynamic link library

                // --- RPATH (运行时路径) ---
                // -Wl,-rpath,后面紧跟路径，中间不要有空格
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Debugger build task"
        }
    ]
}